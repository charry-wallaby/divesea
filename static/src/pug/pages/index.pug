block content
	section.intro 
		.intro__wrap 
			.intro__content 
				hr.intro__line
				h1.h1.intro__title Discover And Create NFTs
				p.intro__subtitle
					| Discover, Create and Sell NFTs On Our NFT Marketplace #[br]
					| With Over Thousands Of NFTs And Get a #[span $20 bonus].
				.intro__btns 
					a.btn.btn__primary
						span.btn__text Explore More
					a.btn.btn__secondary
						span.btn__text create NFT
				.intro__stats 
					.intro__stats-item 
						p 430K+
						p Art Works
					.intro__stats-item 
						p 159K+
						p Creators
					.intro__stats-item 
						p 87K+
						p Collections

			.swiper.carousel.intro__carousel
				.carousel__decors
					.carousel__decors-dots
					+icon("arrow-skrew", {cls: "carousel__decors-arrow"})
				.swiper-wrapper.intro__carousel-wrap
					each slide in cardsTop
						.swiper-slide.intro__carousel-slide
							+img('', slide.image_name, 'jpg', slide.title, 'cards')
							.image-shadow(style=`background-image: url('img/cards/${slide.image_name}.jpg')`)
				.carousel__nav
					.carousel__btn.--prev
						+icon("arrow")
					.carousel__btn.--next
						+icon("arrow")

	section.weekly
		.container 
			h2.h2.text-center.weekly__title Weekly - Top NFT
		.swiper.carousel.weekly__carousel 
			.swiper-wrapper
				each item in cardsTop
					+card({
						timer: item.timer,
						title: item.title,
						image_name: item.image_name
					}).swiper-slide
			.carousel__nav
				.carousel__btn.--prev
					+icon("arrow")
				.carousel__btn.--next
					+icon("arrow")

	section.collection 
		.container.collection__container
			+recentViewedCard()
			h2.h2.text-center.collection__title Top Collection
			.table.collection__table
				each title in table.header
					+tableHeader({
						col1: title.col1,
						col2: title.col2,
						col3: title.col3,
						col4: title.col4,
						col5: title.col5,
						col6: title.col6
					})

				.table__body 
					each item in table.body
						+tableBody({
							avatar: item.avatar,
							name: item.name,
							nick: item.nick,
							volume: item.volume,
							percent: item.percent,
							price: item.price,
							owners: item.owners,
							items: item.items
						})

			+exploreAllLink()

	section.explore 
		.container.explore__container
			h2.h2.text-center.explore__title Explore Marketplace
			+filterBtns("All").explore__filter

			.explore__cards
				each item in cardsTop
					+card({
						timer: item.timer,
						title: item.title,
						image_name: item.image_name
					})

			+exploreAllLink()

	section.unleash 
		.container.unleash__container 
			.unleash__left
				h2.h2.unleash__title
					span Just Unleash - #[br]
					span Your Inner Collector

				ul.unleash__list 
					li.unleash__list-item Best Seller All Around World
					li.unleash__list-item $2M+ Transections Every Day
					li.unleash__list-item Secure Transactions
					li.unleash__list-item Exclusive Collections From Sellers
					li.unleash__list-item Easy Buying and Selling
					li.unleash__list-item Join Our Community

				a.btn.btn__primary.unleash__btn
					span.btn__text Explore More
					+icon("arrow-btn", {cls: 'btn__icon'})

			.unleash__right
				+img('unleash__image --best', 'best-sellers', 'png', 'Best Sellers', 'home')
				+img('unleash__image --notify', 'notification', 'png', 'Notification', 'home')
				+img('unleash__image --recently', 'recently', 'png', 'Recently Viewed', 'home')

			.unleash__decor

